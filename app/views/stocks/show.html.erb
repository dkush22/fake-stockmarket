<h2>Company Name:</h2>
<h3><%=@stock.name%></h3><br>
<h2>Ticker:</h2>
<h3><%=@stock.ticker%></h3><br>
<h2>Market Cap:</h2>
<h3>$<%=@stock.market_cap%></h3><br>
<h2>Stock Price:</h2>
<h3>$<%=@stock.stock_price%></h3><br>
<a href="https://www.cnbc.com/quotes/?symbol=<%=@stock.ticker%>">More Info</a><br>

<%= link_to "Buy this stock", new_investment_path %>

<%= form_for @investment do |f| %>
<%=f.hidden_field :stock_id, :value => @stock.id %>
<%= f.label :quantity %>
<%= f.text_field :quantity %>
<%= f.submit %>
<%end %>
